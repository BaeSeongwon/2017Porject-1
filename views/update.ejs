<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>글 작성</title>
    <%- include('lib.ejs') %>
    <script src="/bower_components/summernote/dist/summernote.js"></script>
    <script src="/bower_components/summernote/dist/lang/summernote-ko-KR.js"></script>
    <script src="/client/js/update.js"></script>
    <link rel="stylesheet" href="/bower_components/summernote/dist/summernote.css">
</head>
<body>
<%- include('menue.ejs') %>
<%- include('midImg.ejs') %>
<div id="mainContents" class="col-md-8" style="overflow: scroll; height: 100%; padding: 0px 20px 0px 20px;">
    <%- include('nav.ejs') %>
    <div id="formContainer" style="width: 80%; margin: 0px auto;">
        <form action="/board/send" method="post">
            <div class="form-group">
                <input id="title" class="form-control" type="text">
            </div>
            <div id="summernote"></div>
            <div style="width: 100%; height: 150px; border: 1px solid #F5F5F5; margin-bottom: 20px; overflow:auto;">
                <table id="file_table" class="table table-striped" style="font-size: 12px;">
                    <thead>
                    <th>제목</th>
                    <th>삭제</th>
                    </thead>
                    <tbody id='file_tbody'>
                    </tbody>
                </table>
            </div>
            <label class="file_label">
                첨부파일
                <input type="file" id="user_file">
            </label>
            <hr>
            <div class="form-group" style="text-align:center;">
                <input class="btn btn-success" type="button" value="글 수정" onclick="uploadWrite()">
                <input class="btn btn-danger" type="button" value="취소">
            </div>
        </form>
    </div>
</div>
</body>
</html>
