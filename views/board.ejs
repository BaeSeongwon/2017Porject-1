<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Booker</title>
    <%- include('lib.ejs') %>
    <script src="../client/js/board.js"></script>
</head>
<body>
<%- include('menue.ejs') %>
<%- include('midImg.ejs') %>
<div class="col-md-7 col-sm-7" style="height: 100%;">
  <!--상단 로그인 버튼 / 사용자 정보-->
  <%- include('nav.ejs') %>
  <div style="margin-bottom: 10px; margin-top: 30px;">
      <div style="width: 50%; display: inline-block;">
          <select id="selectBox" class="form-control" style="width: 80px; margin-right: 10px; float: left;">
              <option>제목</option>
              <option>작성자</option>
          </select>
          <div class="input-group" style="width: 300px; float:left;">
              <input id="searchInput" type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="search()">검색</button>
              </span>
          </div>
      </div>
  </div>
  <%if(board == null){%>
    <article class="atc_containder" style="text-align:center;">
        <h3>게시글이 없습니다.</h3>
    </article>
  <%}else{%>
    <% for(var a in board){%>
    <article class="atc_containder">
        <p class="atc_title" style="cursor:pointer;" onclick="getDetail(<%=board[a].board_index%>)"><strong><%= board[a].board_title %></strong></p>
        <p class="atc_context"><%= board[a].board_context %></p>
        <span class="badge">조회수 : <%= board[a].board_inquiry_count%></span>
    </article>
    <%}%>
  <%}%>
</div>
</body>
</html>
