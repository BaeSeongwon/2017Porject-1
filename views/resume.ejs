<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Booker</title>
    <%- include('lib.ejs') %>
    <script src="../client/js/resume.js"></script>
</head>
<body>
<%- include('menue.ejs') %>
<%- include('midImg.ejs') %>
<div style="overflow: scroll; height: 100%; padding: 0px 20px 0px 20px;'>
  <!--상단 로그인 버튼 / 사용자 정보-->
  <%- include('nav.ejs') %>
    <div style="width: 706px; margin: 0px auto; font-size: 11px; margin-top: 30px;">
        <!--이력 상당 이미지 지원분야 ~ 주소 start-->
        <div>
            <div style="display: inline-block">
                <div id="div_img" class="resume_img">
                    <input type="file" id="img_input" class="resume_img_input" ng-disabled="disabled">
                    <!--<a href="#" class="thumbnail" style="height: 150px;"></a>-->
                </div>
            </div>
            <div style="display: inline-block; width: calc(706px - 160px);">
                <div>
                    <table class="table table-bordered table-condensed" style="text-align: center;">
                        <tr>
                            <td class="active">지원분야</td>
                            <td><input type="text" class="resume_input" id="supporting_field"></td>
                            <td class="active">희망연봉</td>
                            <td><input type="text" id="salary_requirement" class="resume_input"></td>
                        </tr>
                    </table>
                </div>
                <div>
                    <table class="table table-bordered table-condensed" style="text-align: center;">
                        <tr>
                            <td class="active">이름</td>
                            <td colspan="3"><input type="text" id="name" class="resume_input"></td>
                        </tr>
                        <tr>
                            <td class="active">주민등록번호</td>
                            <td colspan="3"><input type="text" id="social_id_number" class="resume_input"></td>
                        </tr>
                        <tr>
                            <td class="active">이메일</td>
                            <td><input type="text" id="email" class="resume_input"></td>
                            <td class="active">핸드폰</td>
                            <td><input type="text" id="phone" class="resume_input"></td>
                        </tr>
                        <tr>
                            <td class="active">주소</td>
                            <td colspan="3"><input type="text" id="address" class="resume_input"></td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
        <!--이력 상당 이미지 지원분야 ~ 주소 end-->
        <!--이력 학력사항 start-->
        <div>
            <p>
              <strong>학력사항</strong>
              <button class="btn btn-success btn-xs" type="button" onclick="addTable('student',4)"><span class="glyphicon glyphicon-plus" style="font-size: 10px;"></span></button>
              <button class="btn btn-danger btn-xs" type="button" onclick="delTable('student')"><span class="glyphicon glyphicon-minus" style="font-size: 10px;"></span></button>
            </p>
            <table class="table table-bordered table-condensed" style="text-align: center;">
              <thead>
                <tr>
                    <td class="active">재학기간</td>
                    <td class="active">학력사항</td>
                    <td class="active">전공</td>
                    <td class="active">학점</td>
                </tr>
              </thead>
              <tbody id="student">
                <tr>
                    <td><input type="text" class="resume_input "></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                </tr>
                <tr>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                </tr>
              </tbody>
            </table>
        </div>
        <!--이력 학력사항 end-->
        <!--이력 경력사항 start-->
        <div>
            <p>
              <strong>경력사항</strong>
              <button class="btn btn-success btn-xs" type="button" onclick="addTable('career',4)"><span class="glyphicon glyphicon-plus" style="font-size: 10px;"></span></button>
              <button class="btn btn-danger btn-xs" type="button" onclick="delTable('career')"><span class="glyphicon glyphicon-minus" style="font-size: 10px;"></span></button>
            </p>
            <table class="table table-bordered table-condensed" style="text-align: center;">
              <thead>
                <tr>
                    <td class="active">기간</td>
                    <td class="active">구분</td>
                    <td class="active">기관 및 장소</td>
                    <td class="active">상세내용</td>
                </tr>
              </thead>
              <tbody id="career">
                <tr>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                </tr>
                <tr>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                </tr>
              </tbody>
            </table>
        </div>
        <!--이력 경력사항 end-->
        <!--이력 어학시험 ~ 자격증/면허증 start-->
        <div>
            <div style="width: 49%; display: inline-block">
                <p>
                  <strong>어학시험</strong>
                  <button class="btn btn-success btn-xs" type="button" onclick="addTable('language',4)"><span class="glyphicon glyphicon-plus" style="font-size: 10px;"></span></button>
                  <button class="btn btn-danger btn-xs" type="button" onclick="delTable('language')"><span class="glyphicon glyphicon-minus" style="font-size: 10px;"></span></button>
                </p>
                <table class="table table-bordered table-condensed" style="text-align: center;">
                  <thead>
                    <tr>
                        <td class="active">언어</td>
                        <td class="active">어학시험</td>
                        <td class="active">시험점수(등급)</td>
                        <td class="active">취득일</td>
                    </tr>
                  </thead>
                  <tbody id="language">
                    <tr>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                    </tr>
                    <tr>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                    </tr>
                  </tbody>
                </table>
            </div>
            <div style="width: 50%; display: inline-block">
                <p>
                  <strong>자격증 / 면허증</strong>
                  <button class="btn btn-success btn-xs" type="button" onclick="addTable('license',3)"><span class="glyphicon glyphicon-plus" style="font-size: 10px;"></span></button>
                  <button class="btn btn-danger btn-xs" type="button" onclick="delTable('license')"><span class="glyphicon glyphicon-minus" style="font-size: 10px;"></span></button>
                </p>
                <table class="table table-bordered table-condensed" style="text-align: center;">
                  <thead>
                    <tr>
                        <td class="active">자격증/면허증</td>
                        <td class="active">발행처/발행기관</td>
                        <td class="active">취득일</td>
                    </tr>
                  </thead>
                  <tbody id='license'>
                    <tr>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                    </tr>
                    <tr>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                        <td><input type="text" class="resume_input"></td>
                    </tr>
                  </tbody>
                </table>
            </div>
        </div>
        <!--이력 어학시험 ~ 자격증/면허증 end-->
        <!--이력 수상내역/공모전 start-->
        <div>
            <p>
              <strong>이력 수상내역/공모전</strong>
              <button class="btn btn-success btn-xs" type="button" onclick="addTable('history',3)"><span class="glyphicon glyphicon-plus" style="font-size: 10px;"></span></button>
              <button class="btn btn-danger btn-xs" type="button" onclick="delTable('history')"><span class="glyphicon glyphicon-minus" style="font-size: 10px;"></span></button>
            </p>
            <table class="table table-bordered table-condensed" style="text-align: center;">
              <thead>
                <tr>
                    <td class="active">수상명</td>
                    <td class="active">수여기관</td>
                    <td class="active">수상일자</td>
                </tr>
              </thead>
              <tbody id='history'>
                <tr>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                </tr>
                <tr>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                    <td><input type="text" class="resume_input"></td>
                </tr>
              </tbody>
            </table>
        </div>
        <!--이력 수상내역/공모전 end-->
    </div>
    <hr>
    <div style="text-align:center;">
      <button class="btn btn-primary" onclick="sendResume()">등록</button>
      <button class="btn btn-danger">취소</button>
    </div>
</div>
</body>
</html>
